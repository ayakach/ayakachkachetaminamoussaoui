<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70px"
            android:background="@drawable/profil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55px"
                android:layout_marginTop="25px"
                android:layout_marginRight="30px"
                android:fontFamily="sans-serif-black"
                android:text="Vous êtes :"
                android:textSize="25px" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Recruteur cherche des CV et  pose des annonces de travail"
                    android:textSize="20px" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="candidat cherche des annonces et pose des CV"
                    android:textSize="20px" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="140px"
            android:layout_marginBottom="10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:fontFamily="sans-serif-black"
                android:text="E-mail :"
                android:textSize="25px" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="300px"
                android:layout_height="70px"
                android:layout_marginLeft="80px"
                android:background="@drawable/edittextbackground"
                android:inputType="textEmailAddress"
                android:paddingLeft="50px"
                android:textSize="20px"
                android:text="Votre adresse E-mail"
                android:textColor="#A8A8A8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:paddingTop="30px"
            android:layout_marginRight="140px"
            android:layout_marginBottom="10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:fontFamily="sans-serif-black"
                android:text="Ville :"
                android:textSize="25px" />

            <Spinner
                android:id="@+id/spinnerVille"
                android:layout_width="90px"
                android:layout_height="40px"
                android:layout_marginLeft="120px"
                android:background="@drawable/edittextbackground"
                android:minWidth="80px"
                android:scrollbarSize="8px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="140px"
            android:layout_marginBottom="20px"
            android:orientation="horizontal"
            android:paddingTop="15px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:fontFamily="sans-serif-black"
                android:text="Mot de passe :"
                android:textSize="25px" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="300px"
                android:layout_height="50px"
                android:layout_marginLeft="20px"
                android:background="@drawable/edittextbackground"
                android:inputType="textPassword"
                android:paddingLeft="50px"
                android:text="Choisissez un mot de passe"
                android:textColor="#A8A8A8"
                android:textSize="20px" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="200px"
            android:layout_marginRight="50px"
            android:layout_marginBottom="20px"
            android:text="(au moins 5 caractères) choisissez un mot de passe qui n'est pas facile à deviner."
            android:textSize="18.4px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="40px"
            android:layout_marginBottom="10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70px"
                android:layout_marginTop="25px"
                android:layout_marginRight="20px"
                android:fontFamily="sans-serif-black"
                android:text="Confirmez le mot de passe :"
                android:textSize="25px" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="300px"
                android:layout_height="70px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="50px"
                android:background="@drawable/edittextbackground"
                android:inputType="textPassword"
                android:paddingLeft="50px"
                android:text="Choisissez un mot de passe"
                android:textColor="#A8A8A8"
                android:textSize="8px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="20px"
            android:background="#0E5BC2"
            android:orientation="horizontal"
            android:paddingTop="15px">

            <TextView
                android:layout_width="264dp"
                android:layout_height="57dp"
                android:layout_marginLeft="50px"
                android:text="En validant nos inscriptions,j'accepte les conditons générales d'utilisation du site alkhd.ma. "
                android:textColor="@color/white"
                android:textSize="18px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:layout_gravity="end"
                android:background="@drawable/buttoninscription"
                android:fontFamily="sans-serif-black"
                android:onClick="inscrire"
                android:paddingLeft="31px"
                android:text="CRÉER UN COMPTE!"
                android:textSize="8px" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
