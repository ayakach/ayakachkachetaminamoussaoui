<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/annonce"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/annonce" />

        <ImageView
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="90px"
            android:background="@drawable/page" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="90px"
            android:layout_marginTop="20px"
            android:layout_marginRight="140px"
            android:layout_marginBottom="70px"
            android:orientation="horizontal"
            android:paddingTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginRight="30px"
                android:fontFamily="sans-serif-black"
                android:text="Titre :"
                android:textSize="32px" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="600px"
                android:layout_height="80px"
                android:layout_marginLeft="68px"
                android:background="@drawable/edittextbackground"
                android:inputType="textEmailAddress"
                android:paddingLeft="40px"
                android:text="Votre adresse E-mail"
                android:textColor="#A8A8A8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginTop="20px"
            android:layout_marginRight="140px"
            android:layout_marginBottom="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:fontFamily="sans-serif-black"
                android:text="catÃ©gorie:(*)"
                android:textSize="31px" />

            <Spinner
                android:id="@+id/spinnercategories"
                android:layout_width="440px"
                android:layout_height="80px"
                android:layout_marginLeft="54px"

                android:background="@drawable/edittextbackground"

                android:minWidth="80px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="20px"
            android:layout_marginRight="140px"
            android:layout_marginBottom="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_marginRight="47px"
                android:fontFamily="sans-serif-black"
                android:text="secteur:"
                android:textSize="31px" />

            <Spinner
                android:id="@+id/spinnersecteur"
                android:layout_width="440px"
                android:layout_height="80px"

                android:layout_marginLeft="60px"

                android:background="@drawable/edittextbackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="70px"
            android:layout_marginTop="20px"
            android:layout_marginRight="140px"
            android:orientation="horizontal"
            android:paddingTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Type de contrat :"
                android:textSize="30px" />

            <EditText
                android:id="@+id/editTextContrat"
                android:layout_width="600px"
                android:layout_height="80px"
                android:background="@drawable/edittextbackground"
                android:inputType="textEmailAddress"
                android:paddingLeft="50px"
                android:textColor="#A8A8A8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="140px"
            android:orientation="horizontal"
            android:paddingTop="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginRight="30px"
                android:fontFamily="sans-serif-black"
                android:text="Description:(*)"
                android:textSize="32px" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="500px"
                android:layout_height="108dp"
                android:layout_marginLeft="20px"
                android:background="@drawable/edittextbackground"
                android:inputType="textMultiLine"
                android:paddingLeft="50px"
                android:textColor="#A8A8A8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:fontFamily="sans-serif-black"
                android:text="Ville :"
                android:textSize="31px" />

            <Spinner
                android:id="@+id/spinnerVille"
                android:layout_width="440px"
                android:layout_height="80px"
                android:layout_marginLeft="140px"
                android:background="@drawable/edittextbackground" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="20px"
            android:background="#D9D9D9"
            android:orientation="horizontal">

            <Button
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginLeft="250px"
                android:backgroundTint="#207FE5"
                android:fontFamily="sans-serif-black"
                android:onClick="insererannonce"
                android:text="Suivant"
                android:textSize="21px" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>